<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".fragments.ProfileFrament">

        <com.codeninjas.bowwow.utils.CustomBoldTV
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/profile"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <com.codeninjas.bowwow.utils.CustomTvLight
            android:id="@+id/subTitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTV"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:text="@string/set_up_your_dog_s_profile"
            android:textSize="16dp" />

        <RelativeLayout
            android:id="@+id/imageRL"
            android:layout_width="100dp"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"
            android:layout_below="@+id/subTitleTV">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:id="@+id/profileCIV"
                android:layout_height="100dp"
                android:src="@drawable/dog" />

            <com.codeninjas.bowwow.utils.CustomTvLight
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/editImageTV"
                android:layout_alignParentBottom="true"
                android:background="#80ffffff"
                android:gravity="center"
                android:text="Edit"
                android:textColor="@color/black" />
        </RelativeLayout>

        <com.codeninjas.bowwow.utils.CustomEditText
            android:id="@+id/dogNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subTitleTV"
            android:layout_marginStart="10dp"
            android:layout_marginTop="44dp"
            android:layout_toEndOf="@+id/imageRL"
            android:hint="Dogs Name"
            android:imeOptions="actionNext"
            android:maxLength="25" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageRL"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <com.codeninjas.bowwow.utils.CustomTvMedium
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Age"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <com.codeninjas.bowwow.utils.CustomEditText
                        android:id="@+id/ageET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Age"
                        android:imeOptions="actionNext"
                        android:maxLength="2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <com.codeninjas.bowwow.utils.CustomTvMedium
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Gender"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <com.codeninjas.bowwow.utils.CustomEditText
                        android:id="@+id/genderET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Gender"
                        android:imeOptions="actionNext"
                        android:maxLength="10" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <com.codeninjas.bowwow.utils.CustomTvMedium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Breed"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <com.codeninjas.bowwow.utils.CustomEditText
                    android:id="@+id/breedET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Breed"
                    android:imeOptions="actionNext"
                    android:maxLength="25" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <com.codeninjas.bowwow.utils.CustomTvMedium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Breeder"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <com.codeninjas.bowwow.utils.CustomEditText
                    android:id="@+id/breederET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Breeder" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <com.codeninjas.bowwow.utils.CustomTvMedium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Color"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <com.codeninjas.bowwow.utils.CustomEditText
                    android:id="@+id/colorET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Color"
                    android:imeOptions="actionNext"
                    android:maxLength="25" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <com.codeninjas.bowwow.utils.CustomTvMedium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Notes (optional)"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <com.codeninjas.bowwow.utils.CustomEditText
                    android:id="@+id/notesET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Notes"
                    android:imeOptions="actionDone"
                    android:maxLength="100" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/registerBT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/gray_button_bg"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>